type User {
  id: ID! @unique
  username: String!
  password: String!
  specialCode: String!
  email: String! @unique
  role: String!
  hauls: [Haul!]!
}

type Haul {
  id: ID! @unique
  item: [Item!]!
}

type Item {
  id: ID! @unique
  name: String!
  brand: String!
  clothingType: ClothingType!
  wtc: String!
  price: Float!
  tags: [Tag!]!
  images: [Image!]!
  rating: String!
  greenLightVotes: Int @default(value: 0)
  redLightVots: Int @default(value: 0)
  deadLinkVotes: Int @default(value: 0)
}

type Tag {
  id: ID! @unique
  tagName: String!
}

type Image {
  id: ID! @unique
  imageUrl: String!
  imageAltTitle: String!
}

enum ClothingType {
  ACCESSORIES
  UPPERBODY
  LOWERBODY
  SHOES
  HEADWEAR
  ARMWEAR
}
